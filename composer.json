{
    "name": "drupal-composer/drupal-project",
    "description": "Project template for Drupal 7 projects with composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/7"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-pcntl": "*",
        "ext-pdo": "*",
        "ext-xml": "*",
        "composer/installers": "^1.9",
        "composer/semver": "^1.4",
        "cweagans/composer-patches": "^1.7",
        "drupal-composer/preserve-paths": "^0.1.6",
        "drupal/better_exposed_filters": "^3.2",
        "drupal/block_class": "^2.3",
        "drupal/bootstrap": "^3.4",
        "drupal/captcha": "^1.6",
        "drupal/colorbox": "^2.10",
        "drupal/composer_autoloader": "^1.0",
        "drupal/content_access": "^1.2-beta2",
        "drupal/ctools": "^1.9",
        "drupal/date": "^2.9",
        "drupal/download_count": "^3.1",
        "drupal/drupal": "^7.62",
        "drupal/ds": "^2.13",
        "drupal/entity": "^1.6",
        "drupal/facetapi": "^1.5",
        "drupal/facetapi_bonus": "^1.1",
        "drupal/feeds": "^2.0-beta1",
        "drupal/feeds_tamper": "^1.1",
        "drupal/field_formatter_class": "^1.1",
        "drupal/field_permissions": "^1.0-beta2",
        "drupal/file_resup": "^1.3",
        "drupal/flexslider": "^2.0-rc1",
        "drupal/fontawesome": "^1.1",
        "drupal/hacked": "^2.0-beta5",
        "drupal/hybridauth": "^2.16",
        "drupal/icon": "^1.0-beta6",
        "drupal/imce": "^1.9",
        "drupal/job_scheduler": "^2.0-alpha3",
        "drupal/jquery_update": "^2.7",
        "drupal/l10n_update": "^1.1",
        "drupal/libraries": "^2.2",
        "drupal/masonry": "^2.0",
        "drupal/masonry_views": "^1.0",
        "drupal/menu_attributes": "^1.0",
        "drupal/menu_block": "^2.7",
        "drupal/module_filter": "^2.0",
        "drupal/nodeviewcount": "^2.4",
        "drupal/oauth": "^3.2",
        "drupal/openid_connect": "^1.3",
        "drupal/panels": "^3.5",
        "drupal/pdf": "^1.7",
        "drupal/quicktabs": "^3.6",
        "drupal/rules": "^2.9",
        "drupal/scroll_to_top": "^2.1",
        "drupal/search_api": "^1.16",
        "drupal/search_api_attachments": "^1.7",
        "drupal/search_api_autocomplete": "^1.4",
        "drupal/search_api_db": "^1.5",
        "drupal/search_api_page": "^1.2",
        "drupal/search_api_solr": "^1.9",
        "drupal/search_api_sorts": "^1.6",
        "drupal/site_verify": "^1.1",
        "drupal/special_menu_items": "^2.0",
        "drupal/tagclouds": "^1.11",
        "drupal/taxonomy_manager": "^1.0",
        "drupal/taxonomy_menu": "^1.5",
        "drupal/token": "^1.6",
        "drupal/transliteration": "^3.2",
        "drupal/views": "^3.13",
        "drupal/views_bootstrap": "^3.1",
        "drupal/views_bulk_operations": "^3.3",
        "drupal/views_data_export": "^3.2",
        "drupal/views_php": "^1.0-alpha3",
        "drupal/webform": "^3.24",
        "drupal/wysiwyg": "^2.2",
        "drush/drush": "^8.0",
        "symfony/filesystem": "~2.7 || ^3",
        "webflo/drupal-finder": "^1.2.1"
    },
    "conflict": {
        "drupal/core": "8.*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "drupal-composer/preserve-paths": false
        }
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-create-project-cmd": [
            "DrupalProject\\composer\\ScriptHandler::removeInternalFiles"
        ]
    },
    "extra": {
        "installer-paths": {
            "web/": ["type:drupal-core"],
            "web/profiles/{$name}/": ["type:drupal-profile"],
            "web/sites/all/drush/{$name}/": ["type:drupal-drush"],
            "web/sites/all/libraries/{$name}/": ["type:drupal-library"],
            "web/sites/all/modules/contrib/{$name}/": ["type:drupal-module"],
            "web/sites/all/themes/contrib/{$name}/": ["type:drupal-theme"]
        },
        "patches-install-hooks": true,
        "patches": {
            "cweagans/composer-patches": {
                "Call the preserve paths hooks" : "https://github.com/jcnventura/composer-patches/compare/1.x...jcnventura:fix-preserve-paths.diff"
            }
        },
        "preserve-paths": [
            "web/sites"
        ]
    }
}
